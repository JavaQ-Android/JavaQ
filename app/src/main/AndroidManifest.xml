<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mina.aki.javaq">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.mina.aki.javaq.Presentation.Quiz.QuizSectionActivity"
                    android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mina.aki.javaq.Presentation.Quiz.QuizResultActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.mina.aki.javaq.Presentation.Quiz.QuizActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.mina.aki.javaq.Presentation.Progress.ProgressActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>